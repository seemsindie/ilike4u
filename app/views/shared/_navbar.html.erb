<div class="navbar navbar-expand-sm navbar-dark bg-dark navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "ilikelogo-white.png" %>
  <% end %>
  <% if user_signed_in? %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  <% else%>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link nav-link-custom" %>
      </li>
    </ul>
  <% end %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Start Job", new_user_job_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Boosted posts", user_jobs_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <li class="nav-item dropdown">
            <%= image_tag "avatar.jpg", class: "dropdown-toggle ilikelogo", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%#= link_to "My Bookings", user_bookings_path(:user_id), class: "dropdown-item" %>
              <%#= link_to "My Page", user_path(current_user), class: "dropdown-item" %>
              <%#= link_to "Propose a Lesson", new_user_teacher_path(:user_id), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
        
        <% end %>
      </li>
    </ul>
  </div>
</div>

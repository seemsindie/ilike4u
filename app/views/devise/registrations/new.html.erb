<body>
  <div class="container" style="max-width: 600px;">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="devise-bootstrap-form">
          <div class="devise-bootstrap-form-row">
            <div class="devise-bootstrap-form-col">
             <div class="imgHeadWrap">
              <%= image_tag "robot_signup.png" %>
              <p class="CardHeading">New </br> Account Info</p>
            </div>
            <%= bootstrap_form_for(resource,
                                   :as => resource_name,
                                   :url => registration_path(resource_name)) do |f| %>

              <div class="form-inputs text-left">
                <%= f.text_field :email,
                           placeholder: 'E-mail address',
                           skip_label: true,
                           class: 'form-control' %>
                <%= f.password_field :password,
                                     placeholder: 'Password',
                                     skip_label: true,
                                     class: 'form-control' %>
                <%= f.password_field :password_confirmation,
                                     placeholder: 'Re-enter Password',
                                     skip_label: true,
                                     class: 'form-control' %>
                <%= f.check_box("I agree to your Terms & Conditions", :checked => false) %>
        <div class="steps">
          <span class="done">1</span>
          <span>2</span>
          <span>3</span>
        </div>
                <%= f.submit 'Next', class: 'btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2' %>
                <% end %>
              </div>

            </div>
          </div>
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-dark btn-block mt-3' %><br />
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>